# ─── Django Core ────────────────────────────────────────────────────────────
SECRET_KEY=your-django-secret-key-here
DEBUG=False

# ─── Database ───────────────────────────────────────────────────────────────
DB_ENGINE=django.db.backends.postgresql
DB_NAME=planora_db
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# ─── Email ──────────────────────────────────────────────────────────────────
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@planorah.me

# ─── Google & GitHub OAuth ──────────────────────────────────────────────────
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/api/users/google/callback/

GITHUB_OAUTH_CLIENT_ID=
GITHUB_OAUTH_CLIENT_SECRET=

# ─── Gemini (AI assistant) ──────────────────────────────────────────────────
GEMINI_API_KEY=

# ─── AI Calling System ──────────────────────────────────────────────────────
# Choose one provider:  huskyvoice | vapi | retell | elevenlabs | bland
AI_CALL_PROVIDER=huskyvoice

# HuskyVoice.ai  (https://studio.huskyvoice.ai)
# Sign up → get API access from your account manager / hello@huskyvoice.ai
HUSKY_API_KEY=             # Bearer token from HuskyVoice dashboard
HUSKY_AGENT_ID=            # Agent ID from HuskyVoice studio
HUSKY_FROM_NUMBER=         # Your assigned caller number in +E.164 format, e.g. +917411765511
HUSKY_LANGUAGE=en          # Language: en | hi | hi-en | kn | ta | te …

# ─ Alternative providers (leave blank if using HuskyVoice) ──────────────────

# Vapi.ai
VAPI_API_KEY=
VAPI_PHONE_NUMBER_ID=
VAPI_ASSISTANT_ID=

# Retell.ai
RETELL_API_KEY=
RETELL_FROM_NUMBER=
RETELL_AGENT_ID=

# ElevenLabs
ELEVENLABS_API_KEY=
ELEVENLABS_AGENT_ID=
ELEVENLABS_FROM_NUMBER=

# Bland.ai
BLAND_API_KEY=
BLAND_FROM_NUMBER=
